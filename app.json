{
  "name": "Daily status bot",
  "description": "Remind your team about standups.",
  "repository": "https://github.com/scoiatael/daily-status-bot",
  "logo": "https://heroku-www-files.s3.amazonaws.com/starbot/starbot-icon.png",
  "success_url": "/",
  "env": {
    "HEROKU_APP_NAME": {
      "required": true
    },
    "WEBHOOK_URL": {
      "description": "URL via which to connect with Slack",
      "required": true
    },
    "SLACK_MENTION": {
      "description": "Who shall be mentioned in the message",
      "required": true
    },
    "NODE_ENV": "staging"
  },
  "image": "heroku/nodejs"
}
